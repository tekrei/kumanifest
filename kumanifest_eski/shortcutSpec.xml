<shortcuts>

  <skipIfNotSupported />
    <!--
        Our shortcut section. Here we define where will be the shortcuts.
    -->
	<programGroup defaultName="Kumanifest" location="applications"/>

        <shortcut
        	name="Kumanifest"
        	programGroup="yes"
        	desktop="yes"
        	applications="no"
        	startMenu="no"
        	startup="no"
        	target="$INSTALL_PATH\calistir.bat"
        	workingDirectory="$INSTALL_PATH"
        	commandLine=""
        	description="Kumanifest Çalıştırılır"
        	iconFile="$INSTALL_PATH\net\kodveus\kumanifest\images\kvu.ico"
        	iconIndex="0"
        	initialState="normal"
            >
        	
            <createForPack name="Base"/>
        </shortcut>
        
        <shortcut
        	name="Uninstaller"
        	programGroup="yes"
        	desktop="no"
        	applications="no"
        	startMenu="no"
        	startup="no"
        	target="$INSTALL_PATH\Uninstaller\uninstaller.jar"
			workingDirectory=""
        	commandLine=""
        	iconFile="%SystemRoot%\system32\SHELL32.dll"
        	iconIndex="31"
        	description="Uninstalls Kumanifest"
            >
        	
            <createForPack name="Base"/>
